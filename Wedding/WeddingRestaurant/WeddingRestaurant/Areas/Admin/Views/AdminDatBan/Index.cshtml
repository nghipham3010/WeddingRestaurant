@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<WeddingRestaurant.Models.DatBan>
@{
    ViewData["Title"] = "Quản lý Đặt Bàn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 8px;
        overflow: hidden;
        font-size: 0.95rem;
        background-color: #ffffff;
    }

        .table th, .table td {
            vertical-align: middle;
            padding: 12px 16px;
        }

        .table thead.table-dark {
            background: linear-gradient(90deg, #2c3e50, #34495e);
            color: #ffffff;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .table-striped tbody tr:nth-of-type(even) {
        background-color: #ffffff;
    }

    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
    }

    .btn-sm.btn-success {
        background-color: #28a745;
        border: none;
        padding: 6px 12px;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }

        .btn-sm.btn-success:hover {
            background-color: #218838;
        }

    .text-success {
        font-weight: 500;
        color: #1e7e34 !important;
    }

    .alert {
        border-radius: 6px;
        padding: 12px 16px;
        margin-bottom: 1rem;
        font-size: 0.95rem;
    }

    h2.text-primary {
        color: #2c3e50;
        font-weight: 600;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Quản lý Đặt Bàn</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Mã</th>
                <th>Tên Khách</th>
                <th>SĐT</th>
                <th>Thời gian nhận</th>
                <th>Số khách</th>
                <th>Trạng thái</th>
                <th>Bàn đã xếp</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.TenKhachHang</td>
                    <td>@item.SoDienThoai</td>
                    <td>@item.ThoiGianNhanBan.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.SoLuongKhach</td>
                    <td>@item.TrangThai</td>
                    <td>@item.BanDaXep</td>
                    <td>
                        @if (item.TrangThai != WeddingRestaurant.Models.TrangThaiDatBan.DaXepBan)
                        {
                            <a asp-action="AssignTable" asp-route-id="@item.Id" class="btn btn-sm btn-success">Xếp bàn</a>
                        }
                        else
                        {
                            <span class="text-success">Đã xếp</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
